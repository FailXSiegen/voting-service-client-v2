# Database settings
DB_ROOT_PASSWORD=verySecureRootPassword
DB_USER=voting_production
DB_PASSWORD=verySecureDBPassword
DB_NAME=voting_production

# JWT Secret for authentication
JWT_SECRET=verySecureJWTSecretKey

# Email settings
EMAIL_HOST=smtp.provider.com
EMAIL_PORT=587
EMAIL_USER=voting@example.com
